<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Add Rules Title"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:id="@+id/rules_add_dialog_layout_rules_title_edit_txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Rules Description"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:id="@+id/rules_add_dialog_layout_rules_description_edit_txt"
        android:layout_below="@+id/rules_add_dialog_layout_rules_title_edit_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>